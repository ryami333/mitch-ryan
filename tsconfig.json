{
    "compilerOptions": {
        "esModuleInterop": true,
        "outDir": ".tscache",
        "incremental": true,
        "jsx": "preserve",
        "baseUrl": "./",
        "strict": true,
        "lib": ["dom", "es6"],
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "custom.d.ts"],
    "exclude": ["node_modules"]
}
