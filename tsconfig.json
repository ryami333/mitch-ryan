{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "strict": true,
    "lib": ["dom", "es6"],
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2020"
  },
  "include": ["src/**/*", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
